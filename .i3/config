#MODES
set $mode_system System (l) trancar, (e) sair, (s) suspender, (h) hibernar, (r) reiniciar, (Shift+s) desligar
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+Insert mode "$mode_system"

set $mode_multimedia Multimedia: Previous (H), Play/Pause (J/K), Next (L)
mode "$mode_multimedia"
{
	bindsym l exec --no-startup-id ~/.scripts/playercontrol.sh next
	bindsym h exec --no-startup-id ~/.scripts/playercontrol.sh previous 
	bindsym j exec --no-startup-id ~/.scripts/playercontrol.sh toggle
	bindsym k exec --no-startup-id ~/.scripts/playercontrol.sh toggle

	#back to normal
	bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$mode_multimedia";

set $mode_brightness Brilho: Reduzir (J), Aumentar (K)
mode "$mode_brightness"
{
	bindsym k exec --no-startup-id xbacklight +10 
	bindsym j exec --no-startup-id xbacklight -10

	#back to normal
	bindsym Escape mode "default"
}
bindsym $mod+Shift+b mode "$mode_brightness";

set $mode_extmonitor External Monitor: Left (J), Right (L), (O) Off
mode "$mode_extmonitor"
{
    bindsym j exec --no-startup-id .scripts/extmonitor.sh e
    bindsym l exec --no-startup-id .scripts/extmonitor.sh d
    bindsym o exec --no-startup-id .scripts/extmonitor.sh o
    bindsym r exec --no-startup-id .scripts/extmonitor.sh r
    # back to normal: Escape
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_extmonitor"

set $mode_current_mpd_delete Delete currently playing song? y/n
mode "$mode_current_mpd_delete"
{
   bindsym y exec --no-startup-id .scripts/remove_current_mpd.sh; mode "default"
   bindsym n mode "default"
}
bindsym $mod+Shift+Delete mode "$mode_current_mpd_delete"
bindsym $mod+Shift+P exec --no-startup-id .scripts/mpd_to_usb.sh

set $mode_set_volume volume
mode "$mode_set_volume"
{
	bindsym k exec --no-startup-id pulseaudio-ctl up
	bindsym Up exec --no-startup-id pulseaudio-ctl up
	bindsym j exec --no-startup-id pulseaudio-ctl down
	bindsym Down exec --no-startup-id pulseaudio-ctl down
	bindsym Escape mode "default" 
}
bindsym $mod+Shift+v mode "$mode_set_volume"


